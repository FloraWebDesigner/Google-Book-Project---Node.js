extends ../layout 

block main-content 
    h1.text-center.text-dark.my-4 Welcome back, #{userSession.username}
    .row.mt-2 
        .col-md-6.offset-md-3.d-flex.flex-row.justify-content-around
            a.admin-card.d-flex.flex-column.justify-content-between.align-items-center.p-2.rounded-3(style="width:13rem;" href="/admin/users")
                img.mt-2(src="/img/user-management.svg" style="width:10rem;")
                h4.text-center.text-secondary User Management
            a.admin-card.d-flex.flex-column.justify-content-between.align-items-center.p-2.rounded-3(style="width:13rem;" href="/admin/booklist")
                img(src="/img/book-management.svg" style="width:10rem;")
                h4.text-center.text-secondary Book Management