extends ../layout 

block main-content 
    .container.d-flex.flex-row.justify-content-between.align-items-center.mt-2
        h1.text-center #{title} 
        a.text-primary(href="/admin/book/googlebooks/add") + Add Google Books
        a.text-primary(href="/admin/book/add") + Manual Add
    .container-fluid.row                
        div.d-flex.flex-row.flex-wrap.justify-content-start
            each b in bookDetails
                div.card.rounded-0(style="width: 6rem; height:8.5rem;").shadow.m-2
                    img.card-img-top.rounded-0(src=b.googleBook.volumeInfo.imageUrl style="width:6rem; height:8.5rem;" alt=b.googleBook.volumeInfo.title)
                    .d-flex.flex-row.justify-content-between.mt-1
                        a.btn.btn-info.btn-sm.p-1(href="#") view
                        form(method="get", action="confirmDeleteBook")
                            input(type="hidden", name="bookId", value=b._id)
                            button.btn.btn-danger.btn-sm.p-1(type="button" onclick=`confirmDeleteBook('${b._id}','${b.googleBook.volumeInfo.title}')`) Delete
