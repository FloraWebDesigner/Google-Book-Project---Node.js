extends layout 

block main-content 
    div(style=`background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url("/img/ai-bg.jpg") no-repeat center center; background-size: cover; min-height: 80vh;margin: 0; padding: 0;`)
        h1.text-center.text-light.my-4 The Age of Smart Reading: Books X AI 
        .row.mt-2 
            .col-md-6.offset-md-3.d-flex.flex-row.justify-content-around
                .AI-card.d-flex.flex-column.justify-content-between.align-items-center.p-2.rounded-3.shadow(style="width:13rem;")
                    img.mt-2(src="/img/AI_bookmark.svg" style="width:10rem;height:6.25rem;")
                    h4.text-center.text-white #{bookMarkTitle}
                .AI-card.d-flex.flex-column.justify-content-between.align-items-center.p-2.rounded-3.shadow(style="width:13rem;")
                    img(src="/img/AI_audiobook.svg" style="width:12rem;height:7.25rem;")
                    h4.text-center.text-white #{audioBookTitle}